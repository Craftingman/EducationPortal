{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ConnectionStrings": {
        "EducationPortal": "Server=localhost;Database=EducationPortal;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "ValidationPatterns": {
        "User": {
            "Email": "^.+@.+\\..+$",
            "Password": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$",
            "Name": "^([А-Я]{1}[а-яё]{1,23}|[A-Z]{1}[a-z]{1,23})$",
            "Surname": "^([А-Я]{1}[а-яё]{1,23}|[A-Z]{1}[a-z]{1,23})$"
        }
    }
}